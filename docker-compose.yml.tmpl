version: '3.7'
services:
  ruby:
    build:
      context: .
      dockerfile: ${DOCKERFILE}
      target: base
      args:
        - RUBY_VERSION=${RUBY_VERSION}
        - FEDORA_VERSION=${FEDORA_VERSION}
    image: ruby:${RUBY_VERSION}

  ruby-jemalloc:
    build:
      context: .
      dockerfile: ${DOCKERFILE}
      target: jemalloc
      args:
        - RUBY_VERSION=${RUBY_VERSION}
        - FEDORA_VERSION=${FEDORA_VERSION}
    image: ruby:${RUBY_VERSION}-jemalloc
