version: '3.7'
services:
  ruby:
    build:
      context: .
      dockerfile: Dockerfile
      target: base
      args:
        - RUBY_VERSION=${RUBY_VERSION}
        - ROCKY_VERSION=${ROCKY_VERSION}
    image: ruby:${RUBY_VERSION}

  ruby-jemalloc:
    build:
      context: .
      dockerfile: Dockerfile
      target: jemalloc
      args:
        - RUBY_VERSION=${RUBY_VERSION}
        - ROCKY_VERSION=${ROCKY_VERSION}
    image: ruby:${RUBY_VERSION}-jemalloc
